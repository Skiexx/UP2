<Application x:Class="Restaurant.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Restaurant"
             xmlns:viewModel="clr-namespace:WpfApp1.MVVM.ViewModel"
             xmlns:view="clr-namespace:WpfApp1.MVVM.View"
             StartupUri="MVVM/View/LoginWindow.xaml">
    <Application.Resources>
         <ResourceDictionary>
             <ResourceDictionary.MergedDictionaries>
                 <ResourceDictionary Source="Theme/MenuButtonTheme.xaml"/>
                 <ResourceDictionary Source="Theme/TextBoxTheme.xaml"/>
                 <ResourceDictionary Source="Theme/LoginBoxTheme.xaml"/>
                 <ResourceDictionary Source="Theme/PasswordBoxTheme.xaml"/>
             </ResourceDictionary.MergedDictionaries>
             <DataTemplate DataType="{x:Type viewModel:OrdersViewWaiterViewModel}">
                 <view:OrdersViewWaiterWindow/>
             </DataTemplate>
             <DataTemplate DataType="{x:Type viewModel:CreateOrderWaiterViewModel}">
                 <view:CreateOrderViewWaiterWindow/>
             </DataTemplate>
             
         </ResourceDictionary>
    </Application.Resources>
</Application>
