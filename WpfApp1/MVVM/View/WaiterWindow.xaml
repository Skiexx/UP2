<Window x:Class="WpfApp1.Views.WaiterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WpfApp1.Views"
        mc:Ignorable="d"
        Title="WaiterWindow" Height="600" Width="920"
        WindowStyle="None" ResizeMode="NoResize" 
        Background="Transparent" AllowsTransparency="True">
        
    <Border Background="#23203B" CornerRadius="40">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            
            <TextBlock Text="Restaurant"
                       VerticalAlignment="Center" HorizontalAlignment="Left"
                       Foreground="White" FontSize="26"
                       Margin="30,0,0,0"/>
            <StackPanel Grid.Row="1">
                <RadioButton Content="Home" Foreground="White"
                             Height="50" FontSize="15"
                             Style="{StaticResource MenuButtonTheme}"/> 
            </StackPanel>
        </Grid>
    </Border>
</Window>
